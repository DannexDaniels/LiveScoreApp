<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.dannextech.apps.livescoreapp.GameDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btHomeTeam"
                android:layout_weight="2"
                android:text="HOME TEAM"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingVertical="24dp"
                android:layout_weight="1"
                android:text="VS"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btAwayTeam"
                android:layout_weight="2"
                android:text="AWAY TEAM"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#898989"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llScores"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tvHomeScore"
                android:layout_weight="2"
                android:text="HOME"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="24dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text=":"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tvAwayScore"
                android:layout_weight="2"
                android:textAlignment="center"
                android:text="AWAY"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#898989"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDate"
                android:text="dd/mm/yyyy"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="#898989"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvGround"
                android:text="Play Ground Played"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
